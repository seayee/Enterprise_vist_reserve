/* pages/visit_management/visit_management.wxss */
.container {
  padding: 0;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background-color: white;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.nav-title {
  font-size: 20px;
  font-weight: 500;
  color: #1f2937;
}

.apply-btn {
  background-color: #1677ff;
  color: white;
  border-radius: 24px;
  padding: 8px 16px;
  font-size: 14px;
  box-shadow: 0 2px 8px rgba(22, 119, 255, 0.2);
}

.status-tabs {
  display: flex;
  background-color: white;
  margin-top: 10px;
  border-bottom: 1px solid #e5e7eb;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 14px 0;
  font-size: 16px;
  color: #6b7280;
  position: relative;
}

.tab-item.active {
  color: #1677ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #1677ff;
}

.record-list {
  padding: 15px;
}

.empty-tip {
  text-align: center;
  padding: 40px 0;
  color: #9ca3af;
  font-size: 14px;
}

.record-card {
  background-color: white;
  border-radius: 8px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 15px;
  background-color: #f9fafb;
}

.apply-no {
  font-size: 14px;
  color: #374151;
}

.status-tag {
  padding: 3px 8px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 500;
}

.status-tag.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.status-tag.approved {
  background-color: #e6f7ff;
  color: #1677ff;
}

.status-tag.completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.card-content {
  padding: 15px;
}

.content-row {
  display: flex;
  margin-bottom: 8px;
}

.label {
  width: 70px;
  color: #6b7280;
  font-size: 14px;
}

.value {
  flex: 1;
  color: #1f2937;
  font-size: 14px;
}

.card-footer {
  padding: 10px 15px;
  border-top: 1px solid #e5e7eb;
  text-align: right;
}

.detail-btn {
  color: #1677ff;
  font-size: 14px;
  padding: 4px 10px;
  border-radius: 4px;
}