/* pages/my.wxss */
.my-container {
  margin: 0px;
}
.base-info {
  width: 100%;
  background-color: #0e6df1;
  padding: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.avatar-container {
  margin: 20rpx 40rpx;
  width: 150rpx;
  height: 150rpx;
  background-color: #ccc; /* 灰色背景 */
  border: 2rpx solid #999; /* 边框 */
  border-radius: 75rpx; /* 圆形边框 */
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 75rpx;
}

.nickname {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: rgb(243, 231, 231);
}

.other{
  margin: 0px;
  width: 100%;
  padding: 20rpx;
  background-color: rgb(210, 229, 245);
  color: rgb(16, 16, 17);
  align-items: left;
  border-radius: 20rpx;
}

.visit-code,.op-log, .settings {
  padding:40rpx;
  background-color: rgb(255, 255, 255);
  margin:10rpx;
}