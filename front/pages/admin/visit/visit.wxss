/* pages/visitor.wxss */
.visitor-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #ffffff;
}

.search-bar {
  width: 100%;
  padding: 40rpx 10rpx;
  background-color: #1677ff;
  display: flex;
  justify-content: center;
}

.search{
  width: 90%;
  background-color: aliceblue;
  display: flex;
  align-items: center;
  border-radius: 8rpx;
  padding-left: 15rpx;
}

.search-input {
  width: 100%;
  padding: 10rpx 20rpx;
  border: none;
  font-size: 16px;
  background-color: aliceblue;
}

.tabs {
  margin: 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid rgb(179, 175, 175);
}

.tab-item {
  flex-grow: 1;
  text-align: center;
  padding: 10rpx;
  cursor: pointer;
}


/* 记录列表容器 */
.records {
  padding: 16rpx;
}

/* 空状态提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-tip image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

/* 记录卡片 */
.record-card {
  background-color: rgb(255, 255, 255);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.2s;
}

.card-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1rpx solid #99b4e5;
}

.visitor-info {
  display: flex;
  flex-direction: column;
}

.visitor-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.visitor-phone {
  font-size: 24rpx;
  color: #666;
}

.status-tag {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 状态标签样式 */
.status-tag.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.status-tag.approved {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-tag.rejected {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.status-tag.completed {
  background-color: #e6f7ff;
  color: #1890ff;
}

/* 卡片主体 */
.card-body {
  padding: 16rpx 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

/* 卡片底部 */
.card-footer {
  padding: 16rpx 24rpx;
  background-color: #eaeef5;
  border-top: 1rpx solid #f0f0f0;
}

.apply-time {
  font-size: 24rpx;
  color: rgb(81, 151, 230);
}